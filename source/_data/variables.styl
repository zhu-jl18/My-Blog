// 优化页面宽度设置
$content-desktop-large   = 58em  // 58em -> 56em 为侧边栏留出更多空间
$content-desktop-largest = 58%   // 58% -> 56% 为侧边栏留出更多空间

// 字体大小优化
$font-size-base = 16px
$font-size-small = 14px
$font-size-large = 18px

// 行间距优化
$line-height-base = 1.7
$line-height-heading = 1.4

// 内容区域最大宽度限制
$content-max-width = 65em
