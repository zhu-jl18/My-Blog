/* ========================================
   左侧装饰模块样式
   ======================================== */

/* 左侧模块容器 */
.left-sidebar-modules {
  position: fixed;
  left: 20px;
  top: 50%;
  transform: translateY(-50%);
  width: 180px;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  gap: 0.8em;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);

  /* 收起状态 */
  &.collapsed {
    left: -150px; /* 收起时只露出30px */
    
    .left-module {
      transform: translateX(0);
      
      /* 完全隐藏模块内容 */
      .clock-display,
      .weather-display,
      .music-player {
        opacity: 0;
        pointer-events: none;
        visibility: hidden;
      }
      
      /* 隐藏模块标题 */
      .module-title {
        display: none;
      }
    }
  }
}

/* 收缩按钮 */
.collapse-toggle {
  position: absolute;
  right: -20px;
  top: 50%;
  transform: translateY(-50%);
  width: 18px;
  height: 36px;
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid rgba(133, 61, 247, 0.15);
  border-left: none;
  border-radius: 0 18px 18px 0;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #853df7;
  font-size: 10px;
  transition: all 0.3s ease;
  z-index: 1001;
  backdrop-filter: blur(10px);
  
  &:hover {
    background: rgba(255, 255, 255, 0.95);
    color: #853df7;
    box-shadow: 0 2px 8px rgba(133, 61, 247, 0.2);
  }
  
  i {
    transition: transform 0.3s ease;
  }
  
  .left-sidebar-modules.collapsed & {
    i {
      transform: rotate(180deg);
    }
    
    &:hover {
      background: rgba(255, 255, 255, 0.95);
      color: #853df7;
    }
  }
}

/* 左侧模块通用样式 */
.left-module {
  border-radius: 20px;
  padding: 1em;
  box-shadow: 0 4px 20px rgba(133, 61, 247, 0.08);
  color: #2c3e50;
  text-align: center;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(25px);
  background: rgba(255, 255, 255, 0.85);
  border: 1px solid rgba(133, 61, 247, 0.1);
  position: relative;
  overflow: hidden;

  /* 顶部渐变条 */
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, #853df7, #667eea, #ff6b6b);
    opacity: 0.6;
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }

  &:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(133, 61, 247, 0.15);
    border-color: rgba(133, 61, 247, 0.2);
    background: rgba(255, 255, 255, 0.9);
    
    &::before {
      transform: scaleX(1);
    }
  }

  /* 模块标题 */
  .module-title {
    font-size: 0.8em;
    font-weight: 600;
    margin-bottom: 0.8em;
    color: #2c3e50;
    transition: all 0.3s ease;
    letter-spacing: 0.3px;

    i {
      margin-right: 0.5em;
      color: #853df7 !important;
      transition: all 0.3s ease;
      text-shadow: 0 1px 2px rgba(133, 61, 247, 0.2);
    }
  }

  &:hover .module-title i {
    transform: scale(1.1) rotate(3deg);
  }
}

/* 时钟模块样式 */
.clock-module {
  background: linear-gradient(135deg, rgba(133, 61, 247, 0.03) 0%, rgba(102, 126, 234, 0.03) 100%);
  
  .clock-display {
    .time {
      font-size: 1.4em;
      font-weight: 700;
      font-family: 'JetBrains Mono', monospace;
      margin-bottom: 0.25em;
      color: #2c3e50;
      text-shadow: 0 1px 2px rgba(133, 61, 247, 0.1);
    }
    
    .date {
      font-size: 0.7em;
      color: #5a6c7d;
      margin-bottom: 0.1em;
      font-weight: 500;
    }
    
    .week {
      font-size: 0.6em;
      color: #7f8c8d;
      font-weight: 400;
    }
  }
}

/* 天气模块样式 */
.weather-module {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(133, 61, 247, 0.03) 100%);
  
  .weather-display {
    .weather-loading {
      font-size: 0.7em;
      color: #7f8c8d;
      font-weight: 500;
    }
    
    .weather-info {
      .temperature {
        font-size: 1.3em;
        font-weight: 700;
        margin-bottom: 0.2em;
        color: #2c3e50;
        text-shadow: 0 1px 2px rgba(133, 61, 247, 0.1);
      }
      
      .description {
        font-size: 0.7em;
        color: #5a6c7d;
        margin-bottom: 0.15em;
        font-weight: 500;
      }
      
      .location {
        font-size: 0.6em;
        color: #7f8c8d;
        font-weight: 400;
      }
    }
  }
}

/* 音乐播放器模块样式 */
.music-module {
  background: linear-gradient(135deg, rgba(133, 61, 247, 0.03) 0%, rgba(102, 126, 234, 0.03) 100%);
  
  .music-player {
    .music-info {
      margin-bottom: 0.8em;
      
      .song-title {
        font-size: 0.75em;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.2em;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
      
      .song-artist {
        font-size: 0.65em;
        color: #7f8c8d;
        font-weight: 400;
      }
    }
    
    .music-controls {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.5em;
      margin-bottom: 0.8em;
      
      .music-btn {
        width: 28px;
        height: 28px;
        border: none;
        border-radius: 50%;
        background: rgba(133, 61, 247, 0.1);
        color: #853df7;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        font-size: 12px;
        
        &:hover {
          background: rgba(133, 61, 247, 0.2);
          transform: scale(1.1);
          box-shadow: 0 2px 8px rgba(133, 61, 247, 0.3);
        }
        
        &:active {
          transform: scale(0.95);
        }
        
        i {
          transition: all 0.3s ease;
        }
      }
    }
    
    .music-progress {
      margin-bottom: 0.8em;
      
      .progress-bar {
        width: 100%;
        height: 3px;
        background: rgba(133, 61, 247, 0.1);
        border-radius: 2px;
        overflow: hidden;
        margin-bottom: 0.3em;
        
        .progress-fill {
          height: 100%;
          background: linear-gradient(90deg, #853df7, #667eea);
          border-radius: 2px;
          transition: width 0.3s ease;
          width: 0%;
        }
      }
      
      .time-display {
        display: flex;
        justify-content: space-between;
        font-size: 0.6em;
        color: #7f8c8d;
        font-weight: 400;
      }
    }
    
    .music-volume {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5em;
      
      i {
        font-size: 0.7em;
        color: #853df7;
        width: 12px;
      }
      
      .volume-display {
        font-size: 0.6em;
        color: #7f8c8d;
        font-weight: 400;
        min-width: 25px;
        text-align: center;
      }
      
      .volume-controls {
        display: flex;
        gap: 0.3em;
        justify-content: center;
        align-items: center;
        
        .volume-btn {
          width: 20px;
          height: 20px;
          border: none;
          border-radius: 50%;
          background: rgba(133, 61, 247, 0.1);
          color: #853df7;
          cursor: pointer;
          display: flex;
          align-items: center;
          justify-content: center;
          transition: all 0.3s ease;
          font-size: 10px;
          
          &:hover {
            background: rgba(133, 61, 247, 0.2);
            transform: scale(1.1);
            box-shadow: 0 2px 6px rgba(133, 61, 247, 0.3);
          }
          
          &:active {
            transform: scale(0.95);
          }
          
          i {
            transition: all 0.3s ease;
          }
        }
      }
    }
  }
}


