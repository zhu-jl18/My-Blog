/* 时间线紧凑布局 */

.posts-collapse .post-content .collection-year {
    font-size: 1.5em;
    font-weight: bold;
    margin: 42px 0 -12px;
    position: relative;
}



/* 侧边栏样式 */
.sidebar {
  position: sticky !important;
  top: 0;
  height: 100vh;
  overflow-y: auto;
  
  /* 博客名字字体样式重新设计 */
  .site-title {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: 1.6em;
    font-weight: 300;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-style: italic;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    
    &:hover {
      transform: translateY(-1px);
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.15);
    }
  }
  
  &::-webkit-scrollbar {
    width: 6px;
  }
  
  &::-webkit-scrollbar-thumb {
    background: rgba(133, 61, 247, 0.2);
    border-radius: 3px;
  }
  
  .menu {
    .menu-item {
      margin: 0.6rem 0 !important;
      
      a {
        padding: 0.4rem 0 !important;
        transition: all 0.3s ease;
        display: block;
        border-radius: 4px;
        color: inherit;
        
        &:hover {
          background: rgba(0, 0, 0, 0.05);
          color: inherit;
          padding-left: 5px;
        }
      }
    }
  }
}

/* 主内容区高度匹配 */
.main-inner {
  min-height: 100vh;
  padding-bottom: 2rem;
}

/* Timeline页面文章标题装饰 - 蓝色竖线 */

.posts-collapse .post-title {
  position: relative;
  padding-left: 15px;
  
  &::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 4px;
    height: 80%;
    background: #667eea;
    transform: translateY(-50%);
    border-radius: 2px;
  }
}

