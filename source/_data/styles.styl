// 单个标签样式
.tag-cloud .tag-cloud-tags a
  display: inline-flex
  align-items: center
  justify-content: center
  line-height: 1 // 避免继承 1.75 导致垂直不居中
  padding: .35em .8em // 紧包裹文字
  margin: 0 // 间距由容器 gap 控制
  border-radius: 9999px
  background: rgba(128,100,241,.08)
  color: #3b3b3b
  border: 1px solid rgba(128,100,241,.15)
  text-decoration: none
  white-space: nowrap
  // 伪随机缩放 - 使用 CSS 变量避免 :hover transform 覆盖
  --scale: 1
  transform: scale(var(--scale))
  transition: transform .18s ease, box-shadow .18s ease, background-color .18s ease, color .18s ease

  &:hover
    transform: scale(var(--scale)) translateY(-1px)
    background: rgba(128,100,241,.12)
    box-shadow: 0 4px 12px rgba(128,100,241,.14)

  // 伪随机微扰（可根据偏好调整或注释掉）
  &:nth-child(4n+1)
    --scale: 1.03
  &:nth-child(4n+2)
    --scale: 0.98
  &:nth-child(4n+3)
    --scale: 1.05


