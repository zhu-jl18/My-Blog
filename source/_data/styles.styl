/* 侧边栏目录高亮颜色 - 改为蓝紫色 */
.post-toc .nav .active > a,
.post-toc .nav .active-current > a {
  border-bottom-color: #667eea !important;
  color: #667eea !important;
}

.post-toc .nav .active-current > a:hover {
  color: #667eea !important;
}

/* 侧边栏导航激活状态 - 改为蓝紫色 */
.sidebar-toc-active .sidebar-nav-toc,
.sidebar-overview-active .sidebar-nav-overview {
  border-bottom-color: #667eea !important;
  color: #667eea !important;
}

.sidebar-toc-active .sidebar-nav-toc:hover,
.sidebar-overview-active .sidebar-nav-overview:hover {
  color: #667eea !important;
}

/* 阅读体验优化 */
// 全局字体和行间距优化
body {
  background: #f8f9fa;
  line-height: 1.7;
  font-size: 16px;
  color: #2c3e50;
}

// 文章内容区域优化
.post-body {
  font-size: 16px !important;
  line-height: 1.75 !important;
  color: #2c3e50 !important;
  max-width: 65em !important;
  margin: 0 auto !important;
}

// 段落间距优化
.post-body p {
  line-height: 1.75 !important;
  margin: 1.2em 0 !important;
  text-align: justify !important;
  word-break: break-word !important;
}

// 标题字体大小优化
.post-body h1 {
  font-size: 1.8em !important;
  line-height: 1.4 !important;
  margin: 1.5em 0 0.8em !important;
  font-weight: 600 !important;
}

.post-body h2 {
  font-size: 1.5em !important;
  line-height: 1.4 !important;
  margin: 1.3em 0 0.7em !important;
  font-weight: 600 !important;
}

.post-body h3 {
  font-size: 1.3em !important;
  line-height: 1.4 !important;
  margin: 1.2em 0 0.6em !important;
  font-weight: 600 !important;
}

.post-body h4 {
  font-size: 1.1em !important;
  line-height: 1.4 !important;
  margin: 1.1em 0 0.5em !important;
  font-weight: 600 !important;
}

// 列表样式优化
.post-body ul, .post-body ol {
  line-height: 1.7 !important;
  margin: 1em 0 !important;
  padding-left: 1.5em !important;
}

.post-body li {
  margin: 0.5em 0 !important;
  line-height: 1.7 !important;
}

// 代码块字体优化
.post-body code {
  font-size: 0.9em !important;
  font-family: "JetBrains Mono", "Fira Code", "Source Code Pro", Consolas, "Courier New", monospace !important;
  background: #f6f8fa !important;
  padding: 0.2em 0.4em !important;
  border-radius: 3px !important;
  color: #e36209 !important;
}

.post-body pre {
  font-size: 0.9em !important;
  line-height: 1.6 !important;
  margin: 1.5em 0 !important;
  background: #f6f8fa !important;
  border: 1px solid #e1e4e8 !important;
  border-radius: 6px !important;
  overflow-x: auto !important;
  
  code {
    background: transparent !important;
    padding: 0 !important;
    color: #24292e !important;
    font-size: 0.9em !important;
  }
}

// 行内代码样式
.post-body p code {
  font-size: 0.85em !important;
  background: #f6f8fa !important;
  padding: 0.2em 0.4em !important;
  border-radius: 3px !important;
  color: #e36209 !important;
  border: 1px solid #e1e4e8 !important;
}

// 引用块样式优化
.post-body blockquote {
  font-size: 0.95em !important;
  line-height: 1.7 !important;
  margin: 1.5em 0 !important;
  padding: 1em 1.5em !important;
  border-left: 4px solid #ff4757 !important;
  background: #f8f9fa !important;
  border-radius: 0 4px 4px 0 !important;
}

// 表格样式优化
.post-body table {
  font-size: 0.9em !important;
  line-height: 1.6 !important;
  margin: 1.5em 0 !important;
}

// 链接样式优化
.post-body a {
  color: #667eea !important;
  text-decoration: none !important;
  border-bottom: 1px solid transparent !important;
  transition: all 0.3s ease !important;
  
  &:hover {
    border-bottom-color: #667eea !important;
    color: #8b5cf6 !important;
  }
}

/* post content */
// 正确示例
.post-content {
  padding: 2.5em !important;
}


// 图片最大化处理
.site-meta .custom-logo-image {
  display: block !important;
  max-height: 180px !important;
  height: auto !important;
  width: auto !important;
  max-width: 100% !important;
  margin: 15px auto 0 !important; // 居中显示
  transition: transform 0.3s ease !important;
  
  &:hover {
    transform: scale(1.07) !important; // 悬停放大效果
  }
}

// 文字元素优化
.site-meta {
  .brand {
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    
    .site-title {
      margin: 0 !important;
      font-size: 2em !important; // 增大标题
    }
  }
  
  .site-subtitle {
    margin: 5px 0 0 !important;
    font-size: 1.2em !important; // 增大副标题
    opacity: 0.9 !important;
  }
}

// 导航栏调整
.site-nav {
  margin-top: 5px !important;
  
  .menu-item {
    padding: 5px 10px !important;
  }
}


