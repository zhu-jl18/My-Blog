.chat-input
  display: flex
  gap: 8px
  padding: 10px 12px
  border-top: 1px solid #ddd
  input
    flex: 1
    border: 1px solid #ccc
    border-radius: 6px
    padding: 8px 10px
  button
    background: #6b46c1
    color: #fff
    border: none
    border-radius: 6px
    padding: 8px 14px
    cursor: pointer

.chat-config
  padding: 10px 12px
  border-top: 1px solid #ddd
  display: grid
  grid-template-columns: 1fr
  gap: 8px
  &.hidden
    display: none
  label
    display: grid
    grid-template-columns: 100px 1fr
    align-items: center
    gap: 8px
  input
    border: 1px solid #ccc
    border-radius: 6px
    padding: 6px 8px
  button.save
    width: 120px
    justify-self: end

[data-theme="dark"] .chat-drawer
  border-left: 1px solid rgba(255,255,255,.10)

  border-color: rgba(255,255,255,0.1) !important

.site-nav-right .theme-toggle:hover
  background: rgba(255,255,255,0.2) !important
  transform: translateY(-1px) !important

[data-theme="dark"] .site-nav-right .theme-toggle:hover
  background: rgba(0,0,0,0.3) !important
// Theme toggle in menu
.menu-item-theme-toggle a
  cursor: pointer
  transition: color 0.3s ease

.menu-item-theme-toggle a:hover
  color: $mycolor !important
