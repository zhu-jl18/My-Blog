<!-- 简洁音乐播放器 -->
<div id="music-player-widget" class="music-player-widget">
  <!-- 收缩按钮 -->
  <div class="player-toggle" id="player-toggle" title="收起/展开">
    <i class="fa fa-chevron-left"></i>
  </div>
  
  <!-- 音乐播放器主体 -->
  <div class="music-player">
    <div class="player-header">
      <i class="fa fa-music"></i>
      <span>音乐播放器</span>
    </div>
    
